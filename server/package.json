{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prestart": "npm-check --skip-unused --quiet || echo 'npm-check failed, continuing...'",
    "start": "node src/server.js",
    "swagger": "node src/swagger.js",
    "dev": "npm run prestart && npm run swagger && nodemon --signal SIGTERM src/server.js",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test mocha",
    "test:watch": "cross-env NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test mocha --watch",
    "test:coverage": "cross-env NODE_OPTIONS='--experimental-vm-modules --no-warnings' NODE_ENV=test nyc mocha",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.js\"",
    "create-users": "node scripts/createSystemUsers.js",
    "reset-admin": "ADMIN_PASSWORD=$(openssl rand -base64 12) node scripts/createSystemUsers.js && echo \"Admin password: $ADMIN_PASSWORD\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:studio": "prisma studio",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.4",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.15",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "rate-limit-redis": "^4.2.2",
    "redis": "^4.6.13",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-autogen": "^2.23.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.15",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/register": "^7.28.3",
    "axios": "^1.11.0",
    "chai": "^5.3.3",
    "chai-http": "^5.0.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.10",
    "npm-check": "^6.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "prisma": "^5.19.1",
    "sinon": "^21.0.0",
    "supertest": "^6.3.4"
  }
}
